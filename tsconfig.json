{
  "compilerOptions": {
      "target": "es2020",
      "allowJs": true,
      "checkJs": false,
      "skipLibCheck": true,
      "emitDeclarationOnly": true,
      "declaration": true,
      "declarationDir": "dist/@melonjs",
      "removeComments": false,
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node"
  },
  "include": ["dist/@melonjs/*.js"],
  "exclude": ["node_modules"]
}